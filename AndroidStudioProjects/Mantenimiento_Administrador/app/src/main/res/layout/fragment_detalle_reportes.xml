<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pruebas.mantenimiento_administrador.detalleReportesFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="375dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detalleReporteTitulo"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteId"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serId"
                        android:id="@+id/detalleReporteLabelId"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteFechaReporte"
                        android:id="@+id/textView7"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serFechaReporte"
                        android:id="@+id/detalleReporteLabelFechaReporte"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteFechaFinalizacion"
                        android:id="@+id/textView9"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serFechaFinalizacion"
                        android:id="@+id/detalleReporteLabelFechaFinalizacion"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reportePrioridad"
                        android:id="@+id/textView11"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serPrioridad"
                        android:id="@+id/detalleReporteLabelPrioridad"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteSolicitante"
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serSolicitante"
                        android:id="@+id/detalleReporteLabelSolicitante"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteLugar"
                        android:id="@+id/textView16"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serLugar"
                        android:id="@+id/detalleReporteLabelLugar"
                        android:layout_weight="1"
                        android:padding="3dip"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/reporteDescripcion"
                        android:id="@+id/textView15"
                        android:layout_weight="1"
                        android:padding="3dip"/>

                    <TextView
                        android:layout_column="2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="serDescripcion"
                        android:id="@+id/detalleReporteLabelDescripcion"
                        android:layout_weight="1"
                        android:padding="5dip"
                        android:lines="7"
                        android:scrollbars = "vertical"


                        />

                </TableRow>


            </TableLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/detalleReporteRelativeLayoutContenedor"></RelativeLayout>

    </FrameLayout>


</ScrollView>


